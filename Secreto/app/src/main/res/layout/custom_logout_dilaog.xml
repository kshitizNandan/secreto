<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_size_300"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cross"
            android:layout_width="@dimen/dimen_size_30"
            android:layout_height="@dimen/dimen_size_30"
            android:layout_gravity="right"
            android:padding="@dimen/dimen_size_5"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_size_20"
            android:paddingRight="@dimen/dimen_size_20">

            <com.secreto.utils.NetworkImageView
                android:id="@+id/iv_profileImg"
                android:layout_width="@dimen/dimen_size_40"
                android:layout_height="@dimen/dimen_size_40"
                app:roundedCorner="true"
                app:roundedCornerDP="40" />

            <com.secreto.widgets.CustomFontTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:text="asasas"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_point_75"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/gray" />

        <com.secreto.widgets.CustomFontTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_size_15"
            android:text="@string/logout"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>