<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_size_15">

        <ImageView
            android:id="@+id/iv_profileImg"
            android:layout_width="@dimen/dimen_size_80"
            android:layout_height="@dimen/dimen_size_80"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileImg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_size_15">

            <com.secreto.widgets.CustomFontTextView
                android:id="@+id/tv_name"
                style="@style/DefaultTextViewStyle"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:gravity="left"
                android:text="name"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_18"
                app:fontStyle="fontBold" />

            <com.secreto.widgets.CustomFontTextView
                android:id="@+id/tv_status"
                style="@style/DefaultTextViewStyle"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:gravity="left"
                android:text="status"
                android:textColor="@color/half_black"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_1"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

</RelativeLayout>