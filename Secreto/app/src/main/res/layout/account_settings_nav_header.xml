<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="@dimen/dimen_size_15">

    <com.secreto.utils.NetworkImageView
        android:id="@+id/iv_profileImg"
        android:layout_width="@dimen/dimen_size_60"
        android:layout_height="@dimen/dimen_size_60"
        android:layout_centerInParent="true"
        app:roundedCorner="true"
        app:roundedCornerDP="40" />

    <com.secreto.fonts.CustomFontTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="asasas"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>