<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/lLFindUser"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_size_5"
        card_view:cardCornerRadius="@dimen/dimen_size_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_size_15">

            <com.secreto.utils.NetworkImageView
                android:id="@+id/iv_profileImg"
                android:layout_width="@dimen/dimen_size_80"
                android:layout_height="@dimen/dimen_size_80"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                app:roundedCorner="true"
                app:roundedCornerDP="40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profileImg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_size_15">

                <com.secreto.widgets.CustomFontTextView
                    android:id="@+id/tv_name"
                    style="@style/DefaultTextViewStyle"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:text="name"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_18"
                    app:fontStyle="fontBold" />

                <com.secreto.widgets.CustomFontTextView
                    android:id="@+id/tv_userName_userEmail"
                    style="@style/DefaultTextViewStyle"
                    android:layout_marginTop="@dimen/dimen_size_5"
                    android:text="status"
                    android:textColor="@color/half_black"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>