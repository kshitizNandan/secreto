<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_size_7"
        app:cardElevation="@dimen/dimen_size_5"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dimen_size_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.secreto.widgets.CustomFontTextView
                android:id="@+id/tv_message"
                style="@style/DefaultTextViewStyle"
                android:gravity="start"
                android:text="dummy"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_16" />

            <com.secreto.widgets.CustomFontTextView
                android:id="@+id/tv_time"
                style="@style/DefaultTextViewStyle"
                android:layout_alignBottom="@+id/tv_message"
                android:layout_alignEnd="@+id/tv_message"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/tv_message"
                android:gravity="bottom"
                android:text="time"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>