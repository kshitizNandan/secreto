<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/dimen_size_10</item>
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dimen_size_10</item>
        <item name="fontStyle">fontRegular</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinkTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">fontRegular</item>
    </style>

    <style name="BlueBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_size_10</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="fontStyle">fontRegular</item>
    </style>
</resources>
