<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/dimen_size_10</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dimen_size_10</item>
        <item name="fontStyle">fontRegular</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DefaultEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/dimen_size_10</item>
        <item name="android:maxLines">1</item>
        <item name="fontStyle">fontRegular</item>
    </style>

    <style name="DefaultTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">fontRegular</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="tabBackground">@drawable/transparent_to_color_gray</item>
        <item name="tabIndicatorHeight">@dimen/dimen_size_2</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:maxWidth">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LinkTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">fontRegular</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_size_40</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_ripple_effect</item>
        <item name="fontStyle">fontRegular</item>
    </style>

    <style name="DefaultTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EmptyTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontStyle">fontRegular</item>
    </style>
</resources>
